# ===== API Keys =====
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=Pi-Autopilot/2.0

OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

GUMROAD_ACCESS_TOKEN=your_gumroad_access_token

# ===== Service Toggles =====
OPENAI_ENABLED=true
REDDIT_ENABLED=true
GUMROAD_ENABLED=true
KILL_SWITCH=false

# ===== Cost Limits =====
MAX_TOKENS_PER_RUN=50000
MAX_USD_PER_RUN=5.0
MAX_USD_LIFETIME=100.0

# ===== Pipeline Settings =====
REDDIT_SUBREDDITS=SideProject,Entrepreneur,startups
REDDIT_MIN_SCORE=10
REDDIT_POST_LIMIT=20

# ===== Other Settings =====
DATABASE_PATH=./data/pipeline.db
ARTIFACTS_PATH=./data/artifacts

MAX_REGENERATION_ATTEMPTS=1

# DRY_RUN: When true, simulates Gumroad uploads without creating real products
# Recommended for initial testing. Set to false when ready for production.
DRY_RUN=true

OPENAI_INPUT_TOKEN_PRICE=0.03
OPENAI_OUTPUT_TOKEN_PRICE=0.06

# Sales feedback thresholds
ZERO_SALES_SUPPRESSION_COUNT=5
REFUND_RATE_MAX=0.3
SALES_LOOKBACK_DAYS=30

# ===== Dashboard Security (Optional) =====
DASHBOARD_PASSWORD=
DASHBOARD_ALLOWED_IPS=127.0.0.1

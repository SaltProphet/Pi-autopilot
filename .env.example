# ==== DATA SOURCES ====
# Comma-separated list of enabled sources: reddit,hackernews,rss,file
# Default: hackernews (works out-of-box with no API keys!)
DATA_SOURCES=hackernews

# ==== REDDIT (Optional - only needed if using reddit source) ====
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=Pi-Autopilot/2.0
REDDIT_SUBREDDITS=SideProject,Entrepreneur,startups
REDDIT_MIN_SCORE=10
REDDIT_POST_LIMIT=20

# ==== HACKERNEWS (No API key required!) ====
HN_MIN_SCORE=50
HN_POST_LIMIT=20
HN_STORY_TYPES=ask_hn,show_hn

# ==== RSS FEEDS (Optional) ====
# Comma-separated list of RSS/Atom feed URLs
RSS_FEED_URLS=
RSS_POST_LIMIT=20

# ==== FILE INGEST (Optional) ====
# Comma-separated list of JSON/CSV file paths for manual curation
FILE_INGEST_PATHS=
FILE_POST_LIMIT=20

# ==== OPENAI (Required) ====
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_INPUT_TOKEN_PRICE=0.00003
OPENAI_OUTPUT_TOKEN_PRICE=0.00006

# ==== GUMROAD (Required) ====
GUMROAD_ACCESS_TOKEN=your_gumroad_access_token

DATABASE_PATH=./data/pipeline.db
ARTIFACTS_PATH=./data/artifacts

# ==== PIPELINE SETTINGS ====
MAX_REGENERATION_ATTEMPTS=1

MAX_TOKENS_PER_RUN=50000
MAX_USD_PER_RUN=5.0
MAX_USD_LIFETIME=100.0

KILL_SWITCH=false

# DRY_RUN: When true, simulates Gumroad uploads without creating real products
# Recommended for initial testing. Set to false when ready for production.
DRY_RUN=true

# ==== SALES FEEDBACK ====
# Sales feedback thresholds
ZERO_SALES_SUPPRESSION_COUNT=5
REFUND_RATE_MAX=0.3
SALES_LOOKBACK_DAYS=30

# ===== Dashboard Security (Optional) =====
# Set a password to protect the dashboard configuration interface
DASHBOARD_PASSWORD=

# Comma-separated list of allowed IP addresses for dashboard access
# Leave empty to allow all IPs
DASHBOARD_ALLOWED_IPS=127.0.0.1
